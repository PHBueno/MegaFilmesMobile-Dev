<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Login"
    android:background="#151515">

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="201dp"
        android:layout_height="158dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="113dp"
        app:srcCompat="@drawable/logo_app" />

    <EditText
        android:id="@+id/editTextLogin"
        android:layout_width="248dp"
        android:layout_height="59dp"
        android:layout_below="@+id/imageLogo"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/input_design"
        android:drawableLeft="@drawable/user_actn"
        android:ems="10"
        android:hint="Usename"
        android:inputType="textPersonName"
        android:textColor="#20B2AA" />
    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="248dp"
        android:layout_height="59dp"
        android:layout_below="@+id/editTextLogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/input_design"
        android:drawableLeft="@drawable/lock_actn"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#20B2AA" />
    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="158dp"
        android:layout_height="59dp"
        android:layout_below="@+id/editTextTextPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="21dp"
        android:background="#215763"
        android:text="Login"
        android:textColor="#FFF" />
</RelativeLayout>